<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FE"
    android:textAlignment="center"
    android:layout_gravity="center"
    tools:context="com.apror.ssf.MainActivity">

    <TextView
        android:layout_width="360dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Smart Clothes For Security Forces"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#32325D"
        android:textSize="20dp">

    </TextView>

    <TextView
        android:layout_width="360dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Dept of Cyber Security DRDO"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#32325D"
        android:textSize="15dp">

    </TextView>

    <EditText
        android:inputType="text"
        android:id="@+id/et1"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@mipmap/bg2"
        android:clickable="false"
        android:cursorVisible="false"
        android:hint="Enter Batalian ID"
        android:imeOptions="actionDone"
        android:maxLength="4"
        android:shadowColor="#F4F5F7"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="#fff"
        android:background="@mipmap/rectangle"
        android:text="Enter" />


    <Button
        android:id="@+id/btn_generate_otp"
        android:layout_width="292dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@mipmap/rectangle"
        android:textColor="#fff"
        android:text="Generate OTP" />

    <EditText
        android:id="@+id/et_otp"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@mipmap/bg2"
        android:clickable="false"
        android:hint="Enter OTP"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:shadowColor="#F4F5F7"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="292dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@mipmap/rectangle"
        android:textColor="#fff"
        android:text="Get Access" />


</LinearLayout>